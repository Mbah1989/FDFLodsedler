@page
@model FDFLodsedler.Pages.Sales.VisSalgModel
@{
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2> Salgs oversigt</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Sales/OpretSalg" class="btn btn-primary">Ny salg</a>
        </div>
    </div>
</div>
<table class="table table-bordered table table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Børn Id </th>
            <th>Antal Retuneret </th>
            <th>Antal Solgt </th>
            <th>Slet</th>
            <th>Opdater</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Salgs != null)
        {
            @foreach (var item in Model.Salgs)
            {
                <tr>
                    <td width="10%"> @item.BørneId </td>
                    <td width="35%"> @item.AntalReturneret</td>
                    <td width="35%"> @item.AntalSolgt</td>
                    <td>
                        <a asp-page="/Sales/SletSalg" asp-route-sid="@item.Salg_Id" class="btn btn-danger m-1">Slet </a>
                    </td>
                    <td>
                        <a asp-page="/Sales/OpdatereSalg" asp-route-sid="@item.Salg_Id" class="btn btn-primary m-1">Opdater </a>
                    </td>
                </tr>
            }
        }
</table>